<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Apply default style for dialogs -->
        <item name="android:dialogTheme">@style/AppDialogTheme</item>
        <item name="android:icon">@mipmap/ic_twitter</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
    </style>


    <!-- Define your custom dialog theme here extending from base -->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Define color properties as desired -->
        <item name="colorPrimaryDark">#000</item>
        <item name="android:textColorHighlight">@color/header</item>
        <!-- Define window properties as desired -->
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>

    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/header</item>
        <item name="colorControlActivated">@color/header</item>
        <item name="colorControlHighlight">@color/header</item>
    </style>

</resources>
